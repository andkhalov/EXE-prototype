{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": ".",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "smart-contracts/agents/**/*.ts",
      "scripts/**/*.ts"
    ]
  }
  